<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:fluent="clr-namespace:AnakinRaW.CommonUtilities.Wpf">

    <Style x:Key="FluentFocusVisualStyle">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Border BorderBrush="{DynamicResource {x:Static fluent:FluentColors.FocusStrokeOuter}}"
                            BorderThickness="{x:Static fluent:FluentConstants.FocusVisualStrokeThickness}"
                            CornerRadius="{x:Static fluent:FluentConstants.FocusVisualCornerRadius}"
                            Margin="{x:Static fluent:FluentConstants.FocusVisualMargin}" SnapsToDevicePixels="True"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>