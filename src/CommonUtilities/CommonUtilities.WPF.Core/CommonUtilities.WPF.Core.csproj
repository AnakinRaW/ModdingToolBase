<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net48;net9.0-windows</TargetFrameworks>
		<RootNamespace>AnakinRaW.CommonUtilities.Wpf</RootNamespace>
		<AssemblyName>AnakinRaW.CommonUtilities.WPF.Core</AssemblyName>
		<UseWPF>true</UseWPF>
	</PropertyGroup>

	<PropertyGroup>
		<Description>Common utilities, such as converters and DPI handing for WPF applications.</Description>
		<AssemblyVersion>2.0.0.0</AssemblyVersion>
		<Version>2.0.0</Version>
	</PropertyGroup>

	<PropertyGroup>
		<SatelliteResourceLanguages>en</SatelliteResourceLanguages>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="AnakinRaW.CommonUtilities" Version="12.3.4" />
		<PackageReference Include="System.Collections.Immutable" Version="9.0.4" PrivateAssets="all" />
		<PackageReference Include="Vanara.PInvoke.Gdi32" Version="4.1.1" PrivateAssets="all" />
		<PackageReference Include="Vanara.PInvoke.SHCore" Version="4.1.1" PrivateAssets="all" />
		<PackageReference Include="Vanara.PInvoke.Shell32" Version="4.1.1" PrivateAssets="all" />
		<PackageReference Include="Vanara.PInvoke.User32" Version="4.1.1" PrivateAssets="all" />
	</ItemGroup>
	
</Project>
