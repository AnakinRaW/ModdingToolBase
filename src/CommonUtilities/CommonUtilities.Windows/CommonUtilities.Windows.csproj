<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<Description>Provides common services and utilities for applications running on Windows.</Description>
		<AssemblyVersion>2.0.0.0</AssemblyVersion>
		<Version>2.0.0</Version>
	</PropertyGroup>

	<PropertyGroup>
		<TargetFrameworks>net48;net8.0</TargetFrameworks>
		<RootNamespace>AnakinRaW.CommonUtilities.Windows</RootNamespace>
		<AssemblyName>AnakinRaW.CommonUtilities.Windows</AssemblyName>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
	</PropertyGroup>

	<PropertyGroup>
		<SatelliteResourceLanguages>en</SatelliteResourceLanguages>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Validation" Version="2.5.51" PrivateAssets="all" />
		<PackageReference Include="Vanara.PInvoke.NetListMgr" Version="3.4.16" PrivateAssets="build;compile" />
	</ItemGroup>

</Project>
