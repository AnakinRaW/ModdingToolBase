		<PackageReference Include="AnakinRaW.CommonUtilities.FileSystem" Version="8.0.1" />
		<PackageReference Include="AnakinRaW.CommonUtilities.SimplePipeline" Version="8.0.1" />
		<PackageReference Include="Validation" Version="2.5.51" PrivateAssets="build;compile" />
		<PackageReference Include="Vanara.PInvoke.RstrtMgr" Version="3.4.14" PrivateAssets="build;compile" />
	</ItemGroup>

	<ItemGroup Condition=" '$(Configuration)' == 'Debug' ">
		<PackageReference Include="envdte" Version="17.5.33428.366" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\AppUpdaterFramework.Core\AppUpdaterFramework.Core.csproj" />
		<ProjectReference Include="..\ExternalUpdater.CLI\ExternalUpdater.CLI.csproj" />
	</ItemGroup>
	
	<PropertyGroup>
		<SatelliteResourceLanguages>en</SatelliteResourceLanguages>
	</PropertyGroup>

